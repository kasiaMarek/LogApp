<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.timetracker">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".LoginActivity" android:label="@string/toolbar_login">
        </activity>
        <activity android:name=".stats.Statistics">
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".timeline.MainActivity"  android:label="@string/toolbar_timeline"/>
        <activity android:name=".tasklogger.MainActivity" android:label="@string/toolbar_tasklogger"/>
        <activity android:name=".stoper.StopperActivity" android:label="@string/toolbar_stopwatch"/>
    </application>

</manifest>